<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#161515"
    app:layout_constraintCircleRadius="4dp"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/bg_edittext"
        android:backgroundTint="#757575"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textColorHint="#525252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="187dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/az_logo0" />

    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:backgroundTint="#757575"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColorHint="#525252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnLoginEntrar"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_button"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:iconPadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
        app:layout_constraintVertical_bias="0.089999974" />

    <Button
        android:id="@+id/BtnLoginSignUp"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:text="Cadastrar-se"
        android:textAlignment="textStart"
        android:textColor="#FAFAFA"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/BtnLoginEntrar"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="27dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="56dp"
        android:paddingTop="4.5dp"
        android:text="NÃ£o tem conta?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLoginEntrar" />

</androidx.constraintlayout.widget.ConstraintLayout>