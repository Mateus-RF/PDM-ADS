<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161515"
    tools:context=".SuggestActivity">

    <EditText
        android:id="@+id/editTextSuggest"
        android:layout_width="353dp"
        android:layout_height="62dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_edittext"
        android:backgroundTint="#757575"
        android:ems="10"
        android:hint="Buscar obras..."
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#525252"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewAnimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/buttonSearchByGemini"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00525252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextSuggest"
        app:srcCompat="@drawable/ic_search" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:text="Recommend Animes by IA"
        android:textColor="#F4F2F2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/editTextSuggest" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnimes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_anime_card" />

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/layout_bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>